@model WebProject.Models.Product

@{
    ViewData["Title"] = "NewProduct";
    Layout = "~/Views/Shared/_Layoutw3.cshtml";
}

<br />

<form class="form-group" method="post">

    <b>Product Name</b>
    @Html.TextBoxFor(x => x.Name, new { @class = "form control" })
    <br />
    <br />
    <b>Description</b>
    @Html.TextBoxFor(x => x.Description, new { @class = "form control" })
    <br />
    <br />
    <b>Price</b>
    @Html.TextBoxFor(x => x.Price, new { @class = "form control" })
    <br />
    <br />
    <b>Image Url</b>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form control" })
    <br />
    <br />
    <b>Stock</b>
    @Html.TextBoxFor(x => x.Stock, new { @class = "form control" })
    <br />
    <br />
    <b>Brand</b>
    @Html.TextBoxFor(x => x.Brand, new { @class = "form control" })
    <br />
    <br />
    <b>Model</b>
    @Html.TextBoxFor(x => x.Model, new { @class = "form control" })
    <br />
    <br />
    <b>Category</b>
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    <br />
    <br />

    <button class="btn btn-info">Add Product</button>
</form>