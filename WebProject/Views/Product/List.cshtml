
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutFront.cshtml";
}


@foreach (var x in Model)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@x.ImageUrl" alt="" />
            <div class="caption">
                <h3 class="pull-right">@x.Price.ToString("c")</h3>
                <h3>
                    <a href="/Product/List">@x.Name</a>
                </h3>
                <p>@x.Description</p>
            </div>
            <div class="addToCart text-right">
                <p class="button ">
                    <a class="btn btn-success" id="cartButton">
                        Sepete Ekle
                    </a>
                </p>
                <p class="button ">
                    <a href="http:localhost:4200" target="_blank" class="btn btn-primary" id="callRequest" >
                        Canlı Destek
                    </a>
                </p>
            </div>
        </div>
    </div>

}

