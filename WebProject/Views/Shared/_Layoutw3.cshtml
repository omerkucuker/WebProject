
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<title>Yonetim Paneli</title>
<meta http-equiv="Content-Type" name="viewport " content="width=device-width" ; charset="UTF-8">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<style>
    table {
        height: 100%;
        width: 100%;
        margin:0;
        padding: 0;
    }
</style>
<body>

    <div class="w3-sidebar w3-bar-block w3-card w3-animate-left" style="display:none" id="mySidebar">
        <button class="w3-bar-item w3-button w3-large"
                onclick="w3_close()">
            Menüler &times;
        </button>
        <a href="/Product/List/{?}" class="w3-bar-item w3-button">Ana Sayfa</a>
        <a href="/Birim/Index" class="w3-bar-item w3-button">Birimler</a>
        <a href="/Personelim/Index" class="w3-bar-item w3-button">Personeller</a>
        <a href="/Category/Index" class="w3-bar-item w3-button">Kategoriler</a>
        <a href="/Product/Index" class="w3-bar-item w3-button">Ürünler</a>
        <a href="/Login/CikisYap" class="w3-bar-item w3-button">Çıkış</a>
    </div>

    <div id="main">

        <div class="w3-teal">
            <button id="openNav" class="w3-button w3-teal w3-xlarge" onclick="w3_open()">&#9776;</button>
            <div class="w3-container">
                <h1>Yönetim Paneli</h1>
            </div>
        </div>



        <div class="w3-container">
            @RenderBody()
        </div>

    </div>

    <script>
        function w3_open() {
            document.getElementById("main").style.marginLeft = "15%";
            document.getElementById("mySidebar").style.width = "15%";
            document.getElementById("mySidebar").style.display = "block";
            document.getElementById("openNav").style.display = 'none';
        }
        function w3_close() {
            document.getElementById("main").style.marginLeft = "0%";
            document.getElementById("mySidebar").style.display = "none";
            document.getElementById("openNav").style.display = "inline-block";
        }
    </script>

</body>
</html>
